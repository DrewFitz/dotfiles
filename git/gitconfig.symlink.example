# Sample gitconfig
#

[hub]
        protocol = https
[user]
        name = AUTHORNAME
        email = AUTHOREMAIL
[push]
        default = current
[credential]
        helper = GIT_CREDENTIAL_HELPER
[alias]
        co = checkout
        promote = !$ZSH/bin/git-promote
        wtf     = !$ZSH/bin/git-wtf
        rank-contributors = !$ZSH/bin/git-rank-contributors
        count   = !git shortlog -sn
[color]
        branch = auto
        diff = auto
        status = auto
        ui = auto
        pager = true
        interactive = auto
[format]
        pretty = %Cblue%h%Creset %Cgreen[%ar]%Creset (%an) %s
[core]
        excludesfile = ~/.config/git/ignore
        attributesfile = ~/.config/git/attributes
        editor = subl -n -w
        autocrlf = input
        pager = less -r
        whitespace = space-before-tab,-indent-with-non-tab,trailing-space
        quotepath = false
        trustctime = false
[fetch]
        prune = true
[apply]
        whitespace = fix
[mergetool]
        keepBackup = false
[difftool]
        prompt = false
[help]
        autocorrect = 1
[hub]
        protocol = https
[color "branch"]
        current = yellow reverse
        local = yellow
        remote = green
[color "diff"]
        meta = yellow bold
        frag = magenta bold
        old = red bold
        new = green bold
[color "status"]
        added = yellow
        changed = green
        untracked = cyan
[filter "media"]
        clean = git-media-clean %f
        smudge = git-media-smudge %f
[difftool "Kaleidoscope"]
        cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[mergetool "Kaleidoscope"]
        cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
        trustExitCode = true
[diff]
        tool = Kaleidoscope
        renames = copies
[difftool]
        prompt = false
[merge]
        tool = Kaleidoscope
[mergetool]
        prompt = false
        keepBackup = false
[diff "localizablestrings"]
        textconv = "iconv -f utf-16 -t utf-8"
        binary = false
[url "git@github.com:"]
        insteadOf = "gh:"
        pushInsteadOf = "github:"
        pushInsteadOf = "git://github.com/"
[url "https://github.com/"]
        insteadOf = "github:"
[url "git@gist.github.com:"]
        insteadOf = "gst:"
        pushInsteadOf = "gist:"
        pushInsteadOf = "git://gist.github.com/"
[url "git://gist.github.com/"]
        insteadOf = "gist:"
