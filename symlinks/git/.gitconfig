# Basic
[user]
        name = Zachary Waldowski
        email = zach@waldowski.me
        signingkey = zach@waldowski.me
[core]
        excludesfile = ~/.cider/git/ignore
        attributesfile = ~/.cider/git/attributes
        editor = subl -n -w
        autocrlf = input
        pager = less -r
        whitespace = space-before-tab,-indent-with-non-tab,trailing-space
        quotepath = false
        trustctime = false
[alias]
        co = checkout
        count = !git shortlog -sn
        pf = push --force-with-lease
[apply]
        whitespace = fix
[credential]
        helper = osxkeychain
[fetch]
        prune = true
[help]
        autocorrect = 1
[push]
        default = current

# Colorization

[color]
        branch = auto
        diff = auto
        status = auto
        ui = auto
        pager = true
        interactive = auto
[color "branch"]
        current = yellow reverse
        local = yellow
        remote = green
[color "diff"]
        meta = yellow bold
        frag = magenta bold
        old = red bold
        new = green bold
[color "status"]
        added = yellow
        changed = green
        untracked = cyan
[filter "media"]
        required = true
        clean = git media clean %f
        smudge = git media smudge %f
[format]
        pretty = %Cblue%h%Creset %Cgreen[%ar]%Creset (%an) %s

# GitHub

[hub]
        protocol = https
[url "git@github.com:"]
        insteadOf = "gh:"
        pushInsteadOf = "github:"
        pushInsteadOf = "git://github.com/"
[url "https://github.com/"]
        insteadOf = "github:"
[url "git@gist.github.com:"]
        insteadOf = "gst:"
        pushInsteadOf = "gist:"
        pushInsteadOf = "git://gist.github.com/"
[url "git://gist.github.com/"]
        insteadOf = "gist:"

# Tooling

[commit]
        gpgsign = true
[gpg]
        program = gpg2
[diff]
        tool = Kaleidoscope
        renames = copies
[diff "plist"]
        textconv = plutil -convert xml1 -o -
[diff "localizablestrings"]
        textconv = "iconv -f utf-16 -t utf-8"
        binary = false
[difftool]
        prompt = false
[difftool "Kaleidoscope"]
        cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[merge]
        tool = Kaleidoscope
[mergetool]
        prompt = false
        keepBackup = false
[mergetool "Kaleidoscope"]
        cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
        trustExitCode = true
